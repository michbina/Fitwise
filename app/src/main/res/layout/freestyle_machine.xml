<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".RegistrationFormActivity" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >

                    <TextView
                        android:id="@+id/machineName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="Pull up"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        android:textSize="30sp"

                        android:paddingTop="22dp"
                         />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Image:"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="250dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pull_up"
                        android:contentDescription="@+id/image_pull_up"
                        android:layout_weight="1"
                        android:cropToPadding="true"
                        android:background="@android:color/background_light"
                        android:layout_margin="2dp"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Description:"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView3"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/advice_1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_weight="1"
                        android:textColor="@color/zxing_custom_result_view"
                        android:padding="10dp"
                        android:background="@android:color/background_light"
                        android:layout_margin="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Steps:"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView4"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/step"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/advice_1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_weight="1"
                        android:textColor="@color/zxing_custom_result_view"
                        android:padding="10dp"
                        android:background="@android:color/background_light"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Watch:"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_marginTop="20dp" />

                </LinearLayout>



                <com.google.android.youtube.player.YouTubePlayerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.29"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="9.93"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:text="Scan another machine"
                        android:textColor="#fff"
                        android:textSize="13dp"
                        android:background="#13b586"
                        android:id="@+id/Scan_again"
                        android:layout_marginLeft="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Menu"
                        android:id="@+id/Menu"
                        android:textColor="#fff"
                        android:textSize="13dp"
                        android:background="#2683c2"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>