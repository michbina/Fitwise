<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/background_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"

                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.09">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fitwise_logo_transparency"
                        android:id="@+id/imageView2"
                        android:layout_weight="1" />

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Welcome, User"
                        android:textColor="@android:color/holo_blue_dark"
                        android:id="@+id/welcome"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:layout_weight="1" />-->

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                android:paddingTop="50dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/elliptical"
                android:layout_margin="2dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonFreeWorkout"
                                android:background="@android:color/transparent"
                                android:textStyle="normal|bold"
                                android:textSize="18sp"
                                android:gravity="top|center_horizontal"

                                android:textColor="@android:color/background_light" />


                        </LinearLayout>

                        <TextView
                            android:text="Freestyle"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView8"
                            android:textColor="@android:color/background_light"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:gravity="top|right"
                            android:textAllCaps="true"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:background="@color/zxing_transparent"
                            android:paddingRight="20dp"
                            android:paddingTop="20dp" />

                        <TextView
                            android:text="Scan and get started!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:layout_gravity="right|center_vertical"
                            android:paddingBottom="30dp"
                            android:textColor="@android:color/background_light"
                            android:textStyle="normal|bold"
                            android:paddingRight="20dp"
                            android:paddingTop="20dp" />

                    </FrameLayout>

                </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.35"
                    android:weightSum="1"
                android:paddingTop="50dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/run"
                android:layout_margin="2dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/buttonRoutine"
                                style="@android:style/TextAppearance.Holo.Widget.EditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:shadowColor="#c31313"
                                android:layout_marginLeft="10dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_weight="1"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18sp"
                                android:textStyle="normal|bold"
                                android:textAllCaps="true"
                                android:background="@color/zxing_transparent" />
                        </LinearLayout>

                        <TextView
                            android:text="Routines"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/routines_text"
                            android:textColor="@android:color/background_light"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:gravity="top|right"
                            android:textAllCaps="true"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:paddingRight="20dp"
                            android:paddingTop="20dp" />

                        <TextView
                            android:text="Start a workout routine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/routines_desc"
                            android:layout_gravity="right|center_vertical"
                            android:textAlignment="center"
                            android:paddingRight="20dp"
                            android:textStyle="normal|bold"
                            android:textColor="@android:color/background_light" />

                    </FrameLayout>
                </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="50dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:background="@drawable/darkgym2"
                    android:layout_margin="2dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/buttonProfile"
                                style="@android:style/TextAppearance.Holo.Widget.EditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:shadowColor="#c31313"
                                android:layout_marginLeft="10dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_weight="1"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18sp"
                                android:textStyle="normal|bold"
                                android:textAllCaps="true"
                                android:background="@color/zxing_transparent" />

                        </LinearLayout>

                        <TextView
                            android:text="View Profile"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/viewprofile"
                            android:textColor="@android:color/background_light"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:gravity="top|right"
                            android:textAllCaps="true"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:paddingRight="20dp"
                            android:paddingTop="2dp" />

                        <TextView
                            android:text="View your personal details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profbuttondesc"
                            android:layout_gravity="right|center_vertical"
                            android:paddingBottom="30dp"
                            android:textColor="@android:color/background_light"
                            android:textStyle="normal|bold"
                            android:paddingRight="20dp" />

                    </FrameLayout>
                </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>